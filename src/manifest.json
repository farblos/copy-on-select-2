{
  "name": "Copy On Select 2",
  "description": "A productivity tool which copies selected text to the clipboard automatically.",
  "homepage_url": "https://github.com/farblos/copy-on-select-2",

  "version": "2.5",

  "icons": {
    "128": "copy-on-select-128.png"
  },

  "permissions": [
    "storage",
    "clipboardWrite"
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "copy-on-select.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "manifest_version": 2
}
